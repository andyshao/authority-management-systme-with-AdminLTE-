@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>WebApplication</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/Scripts/AdminLTE/plugins/font-awesome/css")
    @Styles.Render("~/Scripts/AdminLTE/plugins/ionicons/css")
    @Styles.Render("~/Scripts/AdminLTE/bootstrap/css")
    @Styles.Render("~/Scripts/AdminLTE/dist/css")
    @Styles.Render("~/Scripts/AdminLTE/dist/css/skins")
    @Styles.Render("~/Scripts/AdminLTE/plugins/icheck/css/sqare/blue")
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="login-box">

    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form href="/Home/Login" method="post">
            <div class="form-group has-feedback">
                <input type="text" name="Email" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" name="Password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> Remember Me
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
            </div>
        </form>
        @*<div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                <i class="fa fa-facebook"></i> Sign in using
                Facebook
            </a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google-plus"></i> Sign in using
                Google+
            </a>
        </div>
        <a href="#">I forgot my password</a><br>
        <a href="#" class="text-center">Register as a new user</a>*@
    </div>
</div>
@Scripts.Render("~/Scripts/AdminLTE/plugins/jquery/js")
@Scripts.Render("~/Scripts/AdminLTE/bootstrap/js")
@Scripts.Render("~/Scripts/AdminLTE/plugins/slimscroll/js")
@Scripts.Render("~/Scripts/AdminLTE/plugins/fastclick/js")
@Scripts.Render("~/JavaScript/Shared/_Layout")
@Scripts.Render("~/Scripts/AdminLTE/dist/js")
@Scripts.Render("~/JavaScript/Examples/Login/menu")
@Scripts.Render("~/Scripts/AdminLTE/plugins/icheck/js")
@Scripts.Render("~/JavaScript/Examples/Login")
</body>
</html>
    




